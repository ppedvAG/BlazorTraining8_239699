@page "/modal"
<h3>UseModal</h3>
<Modalppedv @ref="modal1" Titel="Bitte Eingeben" OnSave="Save">
    <div>
        <input class="form-control" @bind-value="Eingabe"/>
    </div>

</Modalppedv>
<button type="button" class="btn btn-primary" @onclick="show">
    Launch demo modal
</button>

@code {
    Modalppedv modal1;
    string Eingabe;
    void show()
    {
        modal1.Show();
    }
    void Save()
    {
        Eingabe = "";
        modal1.Show();
    }

}
