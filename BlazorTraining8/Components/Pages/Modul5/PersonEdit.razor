@page "/person"
<h3>PersonEdit</h3>
<EditForm EditContext="CTX" OnSubmit="save">
    <DataAnnotationsValidator></DataAnnotationsValidator>



    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">

            <InputTextppedv class="form-control" width="100px" hannes="doof" @bind-Value="VM.Name"></InputTextppedv>
            <ValidationMessage For="()=>VM.Name"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label  class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
         
            <InputText class="form-control" @bind-Value="VM.Name"></InputText>
            <ValidationMessage For="()=>VM.Name"></ValidationMessage>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Gross</label>
        <div class="col-sm-10">

            <InputNumber class="form-control" @bind-Value="VM.Gross"></InputNumber>
            <ValidationMessage For="()=>VM.Gross"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Geb Dat</label>
        <div class="col-sm-10">

            <InputDate class="form-control" @bind-Value="VM.GebDat"></InputDate>
            <ValidationMessage For="()=>VM.GebDat"></ValidationMessage>
        </div>
    </div>

    <button class="btn btn-primary" type="submit">save</button>
    <ValidationSummary></ValidationSummary>
</EditForm>

@code {
    Person VM = new Person();
    EditContext CTX;
    void save(EditContext ctx)
    {

    }
    protected override void OnInitialized()
    {
        CTX = new EditContext(VM);
    }
}
